export                                                              # to view all the exported variables
export -p                                                           # to view all exported variables on current shell
export NAME=VALUE                                                   # exporting
export NAME="VALUE"


$ NAME=VALUE                                                          
$ export NAME
$ printenv NAME
VALUE

[Examples]
$ a=5
$ echo $a
5
$ export a
$ printenv a 
5


$ export NAME="VALUE"
$ echo $NAME
VALUE
$ printenv NAME
VALUE
$ export NAME=$NAME

[Examples]
$ export password="123"
$ echo $password
123
$ printenv password
123
$ export credentials=$password
$ echo $credentials
123
$ printenv credentials
123
