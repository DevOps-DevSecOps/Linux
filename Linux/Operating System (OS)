$ uname
$ uname -a                                                             # Show All System Info
$ uname -r                                                             # Print the Kernel Release Number
$ uname -v                                                             # Check Kernel Version
$ uname -n                                                             # Print System Hostname
$ uname -srm

$ lsb_release -a
$ lsb_release -d
$ lsb_release -sc

$ cat /etc/issue
$ cat /etc/os-release
$ cat /etc/lsb-release

$ hostnamectl
