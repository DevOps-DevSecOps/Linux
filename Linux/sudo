$ su                                                                    # switch to root user
$ su root
$ su USER_NAME                                                          # switch to another user
$ su -                                                                  # switch to root user
$ su - USER_NAME                                                        # switch to another user

$ sudo -i                                                               # root user
$ sudo su                                                               # root user
$ sudo su -
$ sudo su - USER_NAME

$ sudo -u root /bin/bash
$ sudo -u USER_NAME /bin/bash

$ sudo install FILE_NAME:original /FOLDER_NAME/FOLDER_NAME/FILE_NAME:rename
  sudo install minikube-linux-amd64 /usr/local/bin/minikube
$ sudo install -o USER_OWNER_NAME -g GROUP_NAME -m 0755 FILE_NAME /FOLDER_NAME/FOLDER_NAME/FILE_NAME
  sudo install -o root -g root -m 0755 kubectl /usr/local/bin/kubectl
